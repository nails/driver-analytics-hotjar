{
    "name": "nails/driver-analytics-hotjar",
    "homepage": "http://nailsapp.co.uk/modules/analytics/driver/hotjar",
    "description": "This is the \"HotJar\" driver for the Nails Analytics module.",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "nails\/module-analytics": "dev-develop"
    },
    "require-dev": {
        "phpunit/phpunit": "10.*",
        "phpstan/phpstan": "1.*",
        "nails\/module-admin": "dev-develop"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "analyse": "./vendor/bin/phpstan analyse -c .phpstan/config.neon"
    },
    "autoload": {
        "psr-4": {
            "Nails\\Analytics\\Driver\\": "src/",
            "Nails\\Analytics\\Driver\\HotJar\\": "src/"
        }
    },
    "extra": {
        "nails": {
            "name": "HotJar",
            "type": "driver",
            "forModule": "nails/module-analytics",
            "namespace": "Nails\\Analytics\\Driver\\HotJar\\",
            "data": {
                "namespace": "Nails\\Analytics\\Driver\\",
                "class": "HotJar"
            }
        }
    }
}
